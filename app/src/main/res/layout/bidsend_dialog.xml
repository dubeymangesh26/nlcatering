<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/caterercolour"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Bid Amount Details"
                android:textStyle="bold"
                android:textSize="@dimen/_20sdp"/>

            <ImageView
                android:id="@+id/cancle_image"
                app:srcCompat="@drawable/ic_clear_black_24dp"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:background="@drawable/categeory_shpe"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText

                android:textSize="15dp"
                android:drawablePadding="10dp"
                android:layout_gravity="center"
                android:inputType="number"
                android:drawableRight="@drawable/mandetoryfield"
                android:background="@null"
                android:id="@+id/bidAmount"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginBottom="5dp"
                android:hint="Enter Amount"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:background="@drawable/categeory_shpe"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:background="@null"
                android:drawablePadding="10dp"
                android:ems="5"
                android:maxLines="3"
                android:minLines="3"
                android:gravity="left|top"
                android:id="@+id/description"
                android:hint="@string/description"
                android:inputType="textMultiLine"
                android:textSize="15dp" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:id="@+id/bidSend"
            android:background="@color/caterercolour"
            android:text="Bid Send"
            android:textColor="@color/white"/>



    </LinearLayout>

</LinearLayout>
