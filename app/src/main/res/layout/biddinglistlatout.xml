<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:clipToPadding="false"
    android:padding="10dp"
    android:id="@+id/biddingmenulayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:translationZ="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="5dp"
                    android:elevation="10dp">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/custlogo"
                        android:background="@drawable/turkies"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.v7.widget.CardView>
                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/company_name"
                        android:textSize="@dimen/_15sdp"
                        android:text="Turkish Food"
                        android:textColor="@color/black"
                        android:fontFamily="@string/title_activity_caterer_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:text="Total Amount:"
                            android:background="@drawable/rupiees_icon"
                            android:textColor="@color/caterercolour"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp" />

                        <TextView
                            android:id="@+id/amount"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text=""
                            android:textColor="@color/caterercolour"
                            android:textSize="@dimen/_12sdp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>