<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomerActivity.ActivitryMain_And_Sub.CustomerQuotation">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:translationZ="16dp"
        android:elevation="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/customercolour"
        style="@style/Base.Theme.AppCompat.Light.DarkActionBar"
        android:minHeight="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back_whitw_24dp"
        >

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="23dp"
                android:text="@string/whatswishes" />

            <android.support.design.widget.TextInputLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/categeory_shpe"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText

                    android:textSize="15dp"
                    android:drawablePadding="10dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:id="@+id/selectdate"
                    android:focusable="false"
                    android:drawableRight="@drawable/mandetoryfield"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="5dp"
                    android:hint="@string/date"/>

            </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/categeory_shpe"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText

                android:textSize="15dp"
                android:drawablePadding="10dp"
                android:layout_gravity="center"
                android:background="@null"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:id="@+id/time"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="5dp"
                android:drawableRight="@drawable/mandetoryfield"
                android:hint="@string/time"/>

        </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/categeory_shpe">

                <Spinner
                    android:id="@+id/typeCatering"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                </Spinner>

            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:background="@drawable/categeory_shpe"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText

                    android:textSize="15dp"
                    android:drawablePadding="10dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:id="@+id/noOfPerson"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:inputType="phone"
                    android:maxLength="5"
                    android:drawableRight="@drawable/mandetoryfield"
                    android:layout_marginBottom="5dp"
                    android:hint="@string/noofpersion"/>

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:background="@drawable/categeory_shpe"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText

                    android:textSize="15dp"
                    android:drawablePadding="10dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:id="@+id/placeOfPerformance"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginBottom="5dp"
                    android:hint="@string/placeofperformance"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/categeory_shpe"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView

                    android:textSize="15dp"
                    android:drawablePadding="10dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:id="@+id/keepWarm"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:editable="false"
                    android:drawableEnd="@drawable/ic_expand_more_black_24dp"
                    android:layout_marginBottom="5dp"
                    android:hint="Deliver in keep warm?"
                    android:drawableRight="@drawable/ic_expand_more_black_24dp" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/categeory_shpe"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView

                    android:textSize="15dp"
                    android:drawablePadding="10dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:id="@+id/withStaff"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:editable="false"
                    android:drawableEnd="@drawable/ic_expand_more_black_24dp"
                    android:layout_marginBottom="5dp"
                    android:hint="With staff?"
                    android:drawableRight="@drawable/ic_expand_more_black_24dp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/vet_at_home_address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/categeory_shpe"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:background="@null"
                    android:drawablePadding="10dp"
                    android:ems="5"
                    android:maxLines="3"
                    android:minLines="3"
                    android:gravity="left|top"
                    android:id="@+id/description"
                    android:hint="@string/description"
                    android:drawableRight="@drawable/mandetoryfield"
                    android:inputType="textMultiLine"
                    android:textSize="15dp" />

            </android.support.design.widget.TextInputLayout>



            <Button
                android:id="@+id/quotSubmit"
                android:textColor="#fff"
                android:text="@string/quotsubmit"
                android:background="@drawable/curveshape_customer"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />




        </LinearLayout>
    </ScrollView>

</LinearLayout>